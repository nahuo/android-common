<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="AlphaAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_to_appear</item>
        <item name="android:windowExitAnimation">@anim/alpha_to_disappear</item>
    </style>

    <style name="ScaleInRightOutRightAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/scale_out_to_right</item>
    </style>

    <style name="ScaleInLeftOutLeftAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/scale_out_to_left</item>
    </style>

    <!-- 自定义等待提示框样式 -->
    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/bg_loading_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>